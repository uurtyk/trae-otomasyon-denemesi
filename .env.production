# Production Environment Variables for Render
# Database Configuration - MongoDB Atlas recommended
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dental_automation?retryWrites=true&w=majority

# JWT Configuration - Use strong secrets in production
JWT_SECRET=your-very-strong-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend URL - Update after frontend deployment
FRONTEND_URL=https://trae79efhkix.vercel.app

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760 # 10MB in bytes
UPLOAD_DIR=uploads

# Email Configuration (Optional - configure with your email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-password

# Redis Configuration (Optional - for production caching)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password